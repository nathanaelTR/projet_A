{% extends 'base.html.twig' %}

{% block title %}Devis{% endblock %}

{% block body %}
  <h1 class="text-3xl font-semibold text-gray-900 mb-6 text-center">Devis</h1>

  <div class="flex flex-wrap justify-center items-center mb-6">
    <div class="flex gap-3 flex-wrap">
      <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">+ Ajouter une facture</button>
      <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">Devis récurrentes en attente</button>
      <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">Paiements</button>
      <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">Importer des devis</button>
      <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">Exporter des devis</button>
    </div>
  </div>

  <div class="flex gap-4 mb-6 flex-wrap">
    <select class="border border-gray-300 rounded px-3 py-2 text-sm">
      <option>Statut</option>
      <option>Payé</option>
      <option>Envoyé</option>
      <option>En attente</option>
    </select>
    <input type="date" class="border border-gray-300 rounded px-3 py-2 text-sm">
    <input type="date" class="border border-gray-300 rounded px-3 py-2 text-sm">
  </div>

  {% set statut_classes = {
    'Payé': 'bg-green-100 text-green-800',
    'Envoyé': 'bg-purple-100 text-purple-800',
    'En attente': 'bg-indigo-100 text-indigo-800'
  } %}

  {% set devis = [
    {
      'statut': 'Payé',
      'numero': 'Facture - 6452645459',
      'client': 'Decathlon',
      'date_emission': '15 Oct 2025',
      'echeance': '14 Nov 2025',
      'montant': '223,41 €'
    },
    {
      'statut': 'En attente',
      'numero': 'Facture - 55952745',
      'client': 'Darty',
      'date_emission': '10 Oct 2025',
      'echeance': '09 Nov 2025',
      'montant': '1 797 €'
    },
    {
      'statut': 'Envoyé',
      'numero': 'Facture 5294532',
      'client': 'Picard',
      'date_emission': '05 Oct 2025',
      'echeance': '20 Oct 2025',
      'montant': '84 €'
    },
    {
      'statut': 'En attente',
      'numero': 'Facture 59493254',
      'client': 'L\'oréal',
      'date_emission': '01 Oct 2025',
      'echeance': '31 Oct 2025',
      'montant': '3 804,75 €'
    },
    {
      'statut': 'En attente',
      'numero': 'Facture - 352664195',
      'client': 'Orange',
      'date_emission': '25 Sep 2025',
      'echeance': '25 Oct 2025',
      'montant': '150,28 €'
    }
  ] %}

  <div class="overflow-x-auto">
    <table class="min-w-full text-sm text-left">
      <thead class="bg-gray-100 text-gray-600 uppercase">
        <tr>
          <th class="px-4 py-2">Statut</th>
          <th class="px-4 py-2">Numéro</th>
          <th class="px-4 py-2">Client</th>
          <th class="px-4 py-2">Date d'émission</th>
          <th class="px-4 py-2">Échéance</th>
          <th class="px-4 py-2">Montant</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for f in devis %}
          <tr class="border-t">
            <td class="px-4 py-2">
              <span class="{{ statut_classes[f.statut] }} text-xs px-2 py-1 rounded-full">{{ f.statut }}</span>
            </td>
            <td class="px-4 py-2">{{ f.numero }}</td>
            <td class="px-4 py-2">{{ f.client }}</td>
            <td class="px-4 py-2">{{ f.date_emission }}</td>
            <td class="px-4 py-2">{{ f.echeance }}</td>
            <td class="px-4 py-2">{{ f.montant }}</td>
            <td class="px-4 py-2">
              <div class="flex gap-2 flex-wrap">
                <button class="bg-indigo-600 text-white px-3 py-1 rounded text-xs hover:bg-indigo-700">Voir</button>
                <button class="bg-blue-600 text-white px-3 py-1 rounded text-xs hover:bg-blue-700">Modifier</button>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
