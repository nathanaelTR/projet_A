{% extends 'base.html.twig' %}

{% block title %}Plan Financier{% endblock %}

{% block body %}
  <h1 class="text-3xl font-semibold text-gray-900 mb-6 text-center">Entreprise : Google – Reporting Financier</h1>

  <div class="flex justify-end gap-4 mb-6">
    <button class="bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300 text-sm">Filtres</button>
    <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm">Exporter</button>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
    <div class="bg-white rounded shadow p-4 text-center">
      <h2 class="text-sm text-gray-500">Rentabilité</h2>
      <p class="text-2xl font-bold text-green-600">€80 600</p>
      <p class="text-xs text-green-500">+7.0%</p>
    </div>
    <div class="bg-white rounded shadow p-4 text-center">
      <h2 class="text-sm text-gray-500">Marge bénéficiaire</h2>
      <p class="text-2xl font-bold text-indigo-600">64.1%</p>
      <p class="text-xs text-green-500">+1.8%</p>
    </div>
    <div class="bg-white rounded shadow p-4 text-center">
      <h2 class="text-sm text-gray-500">Total Dettes</h2>
      <p class="text-2xl font-bold text-red-600">€15 500</p>
      <p class="text-xs text-red-500">−2.5%</p>
    </div>
    <div class="bg-white rounded shadow p-4 text-center">
      <h2 class="text-sm text-gray-500">Total Créances</h2>
      <p class="text-2xl font-bold text-green-600">€22 300</p>
      <p class="text-xs text-green-500">+12.0%</p>
    </div>
  </div>

     <script src="https://cdn.jsdelivr.net/npm/chart.js">
    </script>
    <canvas id="myBarChart" 
            width="380" 
            height="180">
    </canvas>

    <script>

        let data = {
            labels: ['Janvier', 'Février',
                     'Mars', 'Avril', 
                     'Mai','Juin',
                     'Juillet','Aout',
                     'Septembre','Octobre',
                     'Novembre','Décembre'],
            datasets: [{
                label: 'Chifre d'affaires',
                data: [12, 17, 3, 8, 2],
                backgroundColor: 'rgba(70, 192, 192, 0.6)',
                borderColor: 'rgba(150, 100, 255, 1)',
                borderWidth: 1
            },
            {
                label: 'Dépenses',
                data: [1, 7, 3, 8, 2],
                backgroundColor: 'rgba(82, 70, 192, 0.6)',
                borderColor: 'rgba(150, 100, 255, 1)',
                borderWidth: 1
            }]
        };

        // Configuration options for the chart
        let options = {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        };

        // Get the canvas element
        let ctx = document.getElementById('myBarChart')
            .getContext('2d');

        // Create the bar chart
        let myBarChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: options
        });
    </script>

    <div class="bg-white rounded shadow p-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Répartition des Dépenses</h2>
        <img src="https://www.jaspersoft.com/content/dam/jaspersoft/images/graphics/infographics/donut-chart-example.svg" alt="Graphique Répartition des Dépenses" class="w-full rounded">
    </div>


{% endblock %}
