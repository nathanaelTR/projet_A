{% extends 'base.html.twig' %}

{% block title %}Plan Comptable{% endblock %}

{% block body %}
  <h1 class="text-3xl font-semibold text-gray-900 mb-6 text-center">Plan Comptable</h1>

  <!-- Barre de recherche + filtres -->
  <div class="flex flex-wrap justify-between items-center mb-6 gap-4">
    <input type="text" placeholder="Rechercher un compte" class="border border-gray-300 rounded px-4 py-2 text-sm w-full sm:w-1/3">

    <div class="flex gap-4 flex-wrap">
      <select class="border border-gray-300 rounded px-3 py-2 text-sm">
        <option>Classe</option>
        <option>1 - Actif</option>
        <option>2 - Passif</option>
        <option>3 - Capitaux propres</option>
      </select>
      <select class="border border-gray-300 rounded px-3 py-2 text-sm">
        <option>Compte principal</option>
        <option>1000</option>
        <option>2000</option>
        <option>3000</option>
      </select>
      <select class="border border-gray-300 rounded px-3 py-2 text-sm">
        <option>Sous-compte</option>
        <option>1110</option>
        <option>1120</option>
        <option>2110</option>
        <option>2120</option>
      </select>
    </div>

    <div class="flex gap-3">
      <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm">Modifier</button>
      <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">+ Ajouter un compte</button>
    </div>
  </div>

  <!-- Tableau du plan comptable -->
  {% set comptes = [
    { 'code': '1000', 'desc': 'Actifs', 'solde': '10 000 $' },
    { 'code': '1100', 'desc': 'Banque', 'solde': '5 000 $' },
    { 'code': '1110', 'desc': 'Compte courant', 'solde': '2 000 $' },
    { 'code': '1120', 'desc': 'Compte d\'épargne', 'solde': '3 000 $' },
    { 'code': '2000', 'desc': 'Passifs', 'solde': '2 000 $' },
    { 'code': '2100', 'desc': 'Crédits', 'solde': '1 000 $' },
    { 'code': '2110', 'desc': 'Crédit immobilier', 'solde': '500 $' },
    { 'code': '2120', 'desc': 'Crédit auto', 'solde': '500 $' },
    { 'code': '3000', 'desc': 'Capitaux propres', 'solde': '8 000 $' },
    { 'code': '3100', 'desc': 'Capital social', 'solde': '8 000 $' }
  ] %}

  <div class="overflow-x-auto">
    <table class="min-w-full text-sm text-left bg-white rounded shadow">
      <thead class="bg-gray-100 text-gray-600 uppercase">
        <tr>
          <th class="px-4 py-2">Compte</th>
          <th class="px-4 py-2">Description</th>
          <th class="px-4 py-2">Solde</th>
        </tr>
      </thead>
      <tbody>
        {% for c in comptes %}
          <tr class="border-t">
            <td class="px-4 py-2 font-medium">{{ c.code }}</td>
            <td class="px-4 py-2">{{ c.desc }}</td>
            <td class="px-4 py-2">{{ c.solde }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
