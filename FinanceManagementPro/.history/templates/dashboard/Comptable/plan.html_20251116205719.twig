{% extends 'base.html.twig' %}

{% block title %}Plan Comptable{% endblock %}

{% block body %}
  <h1 class="text-3xl font-semibold text-gray-900 mb-6 text-center">Plan Comptable</h1>

  <!-- Barre de recherche + filtres -->
  <div class="flex flex-wrap justify-between items-center mb-6 gap-4">
    <input type="text" placeholder="Rechercher un compte" class="border border-gray-300 rounded px-4 py-2 text-sm w-full sm:w-1/3">

    <div class="flex gap-4 flex-wrap">
      <select class="border border-gray-300 rounded px-3 py-2 text-sm">
        <option>Type</option>
        <option>Actifs</option>
        <option>Banque</option>
        <option>Compte courant</option>
        <option>Compte d'épargne</option>
        <option>Passifs</option>
        <option>Crédits</option>
        <option>Crédit immobilier</option>
        <option>Crédit auto</option>
        <option>Capitaux propres</option>
        <option>Capital social</option>
      </select>
      <select class="border border-gray-300 rounded px-3 py-2 text-sm">
        <option>Compte</option>
        <option>1000</option>
        <option>1100</option>
        <option>1110</option>
        <option>1120</option>
        <option>2000</option>
        <option>2100</option>
        <option>2110</option>
        <option>2120</option>
        <option>3000</option>
        <option>3100</option>
      </select>
    </div>

    <div class="flex gap-3">
      <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm">Modifier</button>
      <button class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 text-sm">+ Ajouter un compte</button>
    </div>
  </div>

  {% set comptes = [
    { 'id': 1, 'code': '1000', 'type': 'Actifs', 'solde': '10 000 $' },
    { 'id': 2, 'code': '1100', 'type': 'Banque', 'solde': '5 000 $' },
    { 'id': 3, 'code': '1110', 'type': 'Compte courant', 'solde': '2 000 $' },
    { 'id': 4, 'code': '1120', 'type': 'Compte d\'épargne', 'solde': '3 000 $' },
    { 'id': 5, 'code': '2000', 'type': 'Passifs', 'solde': '2 000 $' },
    { 'id': 6, 'code': '2100', 'type': 'Crédits', 'solde': '1 000 $' },
    { 'id': 7, 'code': '2110', 'type': 'Crédit immobilier', 'solde': '500 $' },
    { 'id': 8, 'code': '2120', 'type': 'Crédit auto', 'solde': '500 $' },
    { 'id': 9, 'code': '3000', 'type': 'Capitaux propres', 'solde': '8 000 $' },
    { 'id': 10, 'code': '3100', 'type': 'Capital social', 'solde': '8 000 $' }
  ] %}

  <!-- Tableau -->
  <div class="overflow-x-auto">
    <table class="min-w-full text-sm text-left bg-white rounded shadow">
      <thead class="bg-gray-100 text-gray-600 uppercase">
        <tr>
          <th class="px-4 py-2">Compte</th>
          <th class="px-4 py-2">Type</th>
          <th class="px-4 py-2">Solde</th>
        </tr>
      </thead>
      <tbody>
        {% for c in comptes %}
          <tr class="border-t" id="compte-{{ c.id }}">
            <td class="px-4 py-2 font-medium">{{ c.code }}</td>
            <td class="px-4 py-2">{{ c.type }}</td>
            <td class="px-4 py-2">{{ c.solde }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
